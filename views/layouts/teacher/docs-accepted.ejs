                    <a href="?sort=<%= sort %>&page=<%= index %>" class="current-page">
                        <%= index %>
                    </a>
                    <% } else { %>
                        <a href="?sort=<%= sort %>&page=<%= index %>">
                            <%= index %>
                        </a>
                        <% } %>
                            <% } %>

        </div>
    </div>
