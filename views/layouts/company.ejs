<main>
    <div class="main">
        <div class="header-main">
            <h2>สถานประกอบการ-หน่วยงานที่เคยรับนักศึกษาฝึกงาน</h2>
            <div class="sort">
                <select>
                    <option selected value="0">จัดเรียงตาม</option>
                    <option value="1">ชื่อ</option>
                    <option value="2">สถานที่ฝึกงาน</option>
                    <option value="3">จังหวัด</option>
                </select>
            </div>

            <div class="search">
                <input type="text" placeholder="ค้นหา">
            </div>
        </div>
        <div class="table">
            <table class="styled-table">
                <thead>
                    <tr>
                        <th>บริษัท/หน่วยงาน</th>
                        <th>เบอร์โทร บริษัท/หน่วยงาน</th>
                        <!-- <th>ประเภทธุรกิจ</th> -->
                        <th class="on-left">จังหวัด</th>
                        <th>ตำแหน่งที่เคยรับ</th>
                        <th>จำนวนคนที่ฝึก</th>
                    </tr>
                </thead>
                <tbody>
                    <% all_companies.forEach((element,index) => { %>
                        <tr>
                           <td><%= element.name %></td>
                           <td><%= element.tel %></td>
                           <!-- <td>บัญชี / ผู้ตรวจบัญชี</td> -->
                           <td class="on-left"><%= element.province %></td>
                           <td class="position2">
                               
                               <% if (all_position[index]) { %>
                                   <% all_position[index].forEach(element2 => { %>
                                   <div class="backend">
                                   <%= element2 %>
                                   </div>
                                   <% }) %>
                               <% } %>
                               
                           </td>
                           <td><%= intern.filter(value => value === element._id.toString()).length %></td>
                       </tr>
                       <% }) %>
                </tbody>
            </table>
        </div>
        <div class="paginator">

            <% for( let index=1; index <=all_pages2; index++ ) { %>
                <% if (index==current2) { %>
                    <a href="?page2=<%= index %>" class="current-page">
                        <%= index %>
                    </a>
                    <% } else { %>
                        <a href="?page2=<%= index %>">
                            <%= index %>
                        </a>
                        <% } %>
                            <% } %>
            
                    </div>


    </div>
</main>